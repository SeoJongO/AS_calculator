<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:textSize="100px"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num_7"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="7"
            />

        <Button
            android:id="@+id/num_8"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="8"
            />

        <Button
            android:id="@+id/num_9"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="9"
            />

        <Button
            android:id="@+id/division"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_weight="2"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:text="/"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num_4"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="4"
            />

        <Button
            android:id="@+id/num_5"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="5"
            />

        <Button
            android:id="@+id/num_6"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="6"
            />

        <Button
            android:id="@+id/multiple"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="*"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num_1"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="1"
            />

        <Button
            android:id="@+id/num_2"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="2"
            />

        <Button
            android:id="@+id/num_3"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:text="3"
            />

        <Button
            android:id="@+id/minus"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_weight="2"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:text="-"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num_0"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="6"
            android:text="0"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="0px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_height="200px"
            android:layout_weight="2"
            android:text="+"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancle"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_weight="4"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:text="CE"
            />

        <Button
            android:id="@+id/equal"
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:layout_weight="4"
            android:text="="
            />

    </LinearLayout>

</LinearLayout>